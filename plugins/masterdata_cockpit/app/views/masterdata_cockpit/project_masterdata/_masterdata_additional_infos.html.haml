
- unless !@project_masterdata
  - can_edit = current_user.is_allowed?('masterdata_cockpit:masterdata_edit')
  .infobox
    %h4.action-heading
      Project Info
      - if can_edit
        .dropdown.header-action
          %i.fa.fa-cog.dropdown-toggle{ data: { toggle: "dropdown"}, aria: { expanded: true} }
          %ul.dropdown-menu.dropdown-menu-right{ role:"menu"}
            - if can_edit
              %li
                = link_to  plugin('masterdata_cockpit').project_masterdata_edit_path(), title: "", data: {modal: true, toggle: "tooltip", placement: "left"} do
                  %i.fa.fa-edit.fa-fw
                  Edit Masterdata
    %table.table
      %tbody
        %tr
          %th.snug-nowrap
            Project Name:
          %td
            = @project_masterdata.project_name
        %tr
          %th
            Description:
          %td
            - unless @project_masterdata.description
              \-
            = @project_masterdata.description
        %tr
          %th
            Last change:
          %td
            - last_change = DateTime.parse(@project_masterdata.changed_at)
            = last_change.strftime('%I:%M:%S %p %d.%B %Y')

- if current_user.is_allowed?('masterdata_cockpit:masterdata_create')
  - if !@project_masterdata && !flash.now[:error]
    = link_to 'Maintain Masterdata', plugin('masterdata_cockpit').project_masterdata_new_path(), data: { modal: true }, class: 'btn btn-primary btn-sm'