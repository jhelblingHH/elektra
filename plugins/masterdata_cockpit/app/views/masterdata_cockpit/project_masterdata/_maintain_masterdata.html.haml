- if @project_masterdata.errors.present?
  .alert.alert-error
    = render_errors(@project_masterdata.errors)

= f.input :project_id,    :as => :hidden, :input_html => { :value => @scoped_project_id }
= f.input :project_name,  :as => :hidden, :input_html => { :value => @scoped_project_name }
= f.input :domain_id,     :as => :hidden, :input_html => { :value => @scoped_domain_id }
= f.input :description, label: "Description"

%label.control-label Cost Object
.panel.panel-default
  .panel-body
    - inherited_flag = @project_masterdata.cost_object_inherited
    .row
      .col-sm-2
        = f.input :cost_object_inherited, label: "Inherited", as: :select, include_blank: false, include_hidden: false, required:true
      .col-sm-3
        = f.input :solution, label: "Solution", as: :select, collection: MasterdataCockpit::Config.solutions, disabled: inherited_flag
      .col-sm-3
        - types = MasterdataCockpit::Config.cost_object_types
        = f.input :cost_object_type, 
            label:        "Type", 
            as:           :select, 
            collection:   types.keys, 
            label_method: -> (k) { types[k] },
            disabled: inherited_flag,
            required:true
      .col-sm-4
        = f.input :cost_object_name, label: "Name" , required:true, disabled: inherited_flag
%label.control-label Responsibility
.panel.panel-default
  .panel-body
    .row
      .col-sm-6
        = f.input :responsible_operator_id, label: "Operator", placeholder: "C/D/I User"
      .col-sm-6.operator-email
        = f.input :responsible_operator_email, placeholder: "Email", label: false
    .row
      .col-sm-6
        = f.input :responsible_security_expert_id, label: "Security Expert", placeholder: "C/D/I User"
      .col-sm-6.operator-email
        = f.input :responsible_security_expert_email, placeholder: "Email", label: false
    .row
      .col-sm-6
        = f.input :responsible_product_owner_id, label: "Product Owner", placeholder: "C/D/I User"
      .col-sm-6.operator-email
        = f.input :responsible_product_owner_email, placeholder: "Email", label: false
    .row
      .col-sm-6
        = f.input :responsible_controller_id, label: "Controller", placeholder: "C/D/I User"
      .col-sm-6.operator-email
        = f.input :responsible_controller_email, placeholder: "Email", label: false
%label.control-label Customer Information
.panel.panel-default
  .panel-body
    .row
      .col-sm-4
        - revenue_relevances = MasterdataCockpit::Config.revenue_relevances
        = f.input :revenue_relevance, 
          label: "Revenue Relevance", 
          as: :select, 
          collection: revenue_relevances.keys,
          label_method: -> (k) { revenue_relevances[k] },
          required:true
      .col-sm-4
        - business_criticalitys = MasterdataCockpit::Config.business_criticalitys
        = f.input :business_criticality, 
          label: "Business Criticality",
          as: :select, 
          collection: business_criticalitys.keys,
          label_method: -> (k) { business_criticalitys[k] },
          required:true
      .col-sm-4
        = f.input :number_of_endusers , label: "Number of Endusers"
